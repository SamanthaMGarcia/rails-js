<h1><%= @recipe.title %></h1>
<h5><%= @recipe.instructions %></h5>
<%= link_to "Edit", edit_recipe_path(@recipe), class: "button" %>
<%= link_to "Delete", recipe_path(@recipe), method: :delete, data: { confirm: "Are you sure you wish to delete this recipe?" } class: "button" %>
<%= link_to "Home", recipes_path(@recipe), class: "button" %>
